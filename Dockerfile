# Use a specific version instead of :8 for stability in production
FROM centos:8
LABEL maintainer="mohitbishesh7@gmail.com"

# Update the repositories and install applications in one step to minimize layer count, and clean up cache
RUN yum -y update && \
    yum -y install httpd zip unzip && \
    yum clean all && \
    rm -rf /var/cache/yum

# Adding the ZIP, extract it, copy content to desired location, and cleanup in a single step
ADD https://www.free-css.com/assets/files/free-css-templates/download/page254/photogenic.zip /var/www/html/
WORKDIR /var/www/html/
RUN unzip photogenic.zip && \
    cp -rvf photogenic/* . && \
    rm -rf photogenic photogenic.zip

CMD ["/usr/sbin/httpd", "-D", "FOREGROUND"]
EXPOSEÂ 80




